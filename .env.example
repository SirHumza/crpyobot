# =============================================================================
# CRYPTO SENTINEL BOT - CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# BINANCE API (Required)
# -----------------------------------------------------------------------------
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# IMPORTANT: Enable "Spot Trading" ONLY - Disable withdrawals!
# Restrict to your VPS IP for security

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Use testnet for testing (set to 'true' for paper trading)
BINANCE_TESTNET=false

# -----------------------------------------------------------------------------
# LLM API (Required for news analysis)
# -----------------------------------------------------------------------------
# Supported: gemini, openai
LLM_PROVIDER=gemini

# For Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# For OpenAI (alternative)
OPENAI_API_KEY=your_openai_api_key_here

# -----------------------------------------------------------------------------
# DISCORD NOTIFICATIONS (Optional but recommended)
# -----------------------------------------------------------------------------
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here
DISCORD_WEBHOOK_URL=your_webhook_url_here
DISCORD_ADMIN_USER_IDS=user_id_1,user_id_2

# -----------------------------------------------------------------------------
# TRADING CONFIGURATION
# -----------------------------------------------------------------------------
# Base currency (what you hold profits in)
BASE_CURRENCY=USDT

# Trading pairs (comma-separated)
TRADING_PAIRS=BTCUSDT,ETHUSDT,SOLUSDT

# Capital allocation
CORE_ALLOCATION=0.60
SATELLITE_ALLOCATION=0.40

# Core bucket coins (low volatility, buy & hold)
CORE_COINS=BTCUSDT,ETHUSDT

# Risk parameters
MAX_RISK_PER_TRADE=0.01
MAX_SATELLITE_EXPOSURE=0.25
DAILY_LOSS_LIMIT=0.05
MAX_DRAWDOWN=0.15

# Stop loss and take profit defaults (as decimal)
DEFAULT_STOP_LOSS=0.02
DEFAULT_TAKE_PROFIT=0.04

# Maximum trades per day
MAX_TRADES_PER_DAY=10

# -----------------------------------------------------------------------------
# LLM CONFIDENCE THRESHOLDS
# -----------------------------------------------------------------------------
MIN_CONFIDENCE_TO_TRADE=60
HIGH_CONFIDENCE_THRESHOLD=85

# -----------------------------------------------------------------------------
# TECHNICAL FILTERS
# -----------------------------------------------------------------------------
MIN_VOLUME_USDT=100000
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# -----------------------------------------------------------------------------
# PAPER TRADING
# -----------------------------------------------------------------------------
PAPER_TRADE=false
PAPER_STARTING_BALANCE=1000

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_TO_FILE=true
